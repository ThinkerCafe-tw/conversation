# LINE Bot Configuration
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here
LINE_CHANNEL_SECRET=your_line_channel_secret_here

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Configuration (Redis Cloud)
REDIS_HOST=redis-xxxxx.c302.asia-northeast1-1.gce.redns.redis-cloud.com
REDIS_PORT=13623
REDIS_PASSWORD=your_redis_password_here
REDIS_USERNAME=default

# Neo4j Configuration (Neo4j Aura Free)
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Sentry Error Tracking (Optional but Recommended)
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxx@o000000.ingest.sentry.io/0000000

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
TZ=Asia/Taipei

# Optional: Sentence Transformer Model
# SENTENCE_TRANSFORMER_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2